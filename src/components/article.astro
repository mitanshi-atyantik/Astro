---
const {title, author, date, description, slug} = Astro.props
---



<div class="p-4 lg:w-1/3">
    <div class="h-full bg-gray-300 bg-opacity-75 px-4 pt-8 pb-10 rounded-lg overflow-hidden text-center relative">
     
      <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">{date}</h2>
      <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3">{title}</h1>
      <p class="leading-relaxed text-m mb-3">{description}</p>
      <h2 class="tracking-widest text-xs title-font font-medium text-gray-600 mb-1">By {author}</h2>

      <a class="text-indigo-500 inline-flex items-center text-s mt-2" href={`/${slug}`}>Learn More
        <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14"></path>
          <path d="M12 5l7 7-7 7"></path>
        </svg>
      </a>
      
    </div>
  </div>
